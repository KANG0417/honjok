<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ProductMapper">

	<select id="productVO" parameterType="String" resultType="productVO">
		select * from product where p_num = #{pNum}
	</select>
	
	<select id="productReviewVO" parameterType="String" resultType="productReviewVO">
		select * from product_review where p_num = #{pNum}
	</select>
	
	<insert id="insertReview" parameterType="productReviewVO">
		insert into product_Review values(#{pNum},PRODUCT_REVIEW_SEQ.nextval,#{rating},#{pName,jdbcType=VARCHAR},#{id},sysdate,#{photoImage1},#{title},#{content},#{photoImage2})
	</insert>
	

</mapper>