   <insert id="insert" parameterType="CommunityVO">
      insert INTO community(
      COM_SEQ,
      TITLE,
      ID,
      CONTENT,
      REGDATE,
      HIT,
      LIKES,
      TYPE)
      values(COMMMUNITY_SEQ.NEXTVAL, #{title}, #{id}, #{content}, SYSDATE, '0', '0', '1')
   </insert>
   
   <select id="selectAll" resultType="CommunityVO">
  	 select * from COMMUNITY where type='1'
   </select>


