<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cookMapper">
 
   <insert id="insertCook" parameterType="cook">
    	insert into comm_cook
		VALUES(cook_sequence.NEXTVAL,#{title},#{content}
		,sysdate, #{category}, #{image},#{cooktime},0,0,'ID',#{nickname})
  	</insert>
	
	<select id="selectOne" parameterType="String" resultType="cook">
		   SELECT * FROM COMMUNITY WHERE COM_SEQ = #{com_seq}
	</select>
	<select id="selectAll" resultType="cook">
		SELECT *
		FROM COMM_COOK CO
	</select>
	
	<update id="update" parameterType="cook">
		UPDATE COMMUNITY
		SET
		TITLE = #{title},
		ID =#{id},
		CONTENT = #{content},
		REGDATE =
		#{regdate},
		HIT = #{hit},
		LIKES= #{likes},
		NICKNAME = #{nickname, jdbcType=VARCHAR}
		WHERE com_seq = #{com_seq}
	</update>
	
</mapper>